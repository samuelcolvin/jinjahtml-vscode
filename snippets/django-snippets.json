{
  "Comment": {
    "prefix": "comment",
    "description": "Comment block",
    "body": [
      "{# $1",
      "\t$2",
      "#}"
    ]
  },
  "var": {
    "prefix": "var",
    "description": "Empty Var",
    "body": [
      "{{ $1 }}"
    ]
  },
  "tag": {
    "prefix": "tag",
    "description": "Empty tag",
    "body": [
      "{% $1 %}"
    ]
  },
  "CSRF": {
    "prefix": "csrf",
    "description": "CSRF token",
    "body": [
      "<input type=\"hidden\" name=\"csrfmiddlewaretoken\" value=\"{{ csrf_token }}\">"
    ]
  },
  "Extends": {
    "prefix": "extends",
    "description": "Extends block",
    "body": [
      "{% extends \"$1\" %}"
    ]
  },
  "For loop": {
    "prefix": "for",
    "description": "For loop",
    "body": [
      "{% for $1 in $2 %}",
      "$3",
      "{% endfor %}"
    ]
  },
  "For-Else loop": {
    "prefix": "forelse",
    "description": "For-Else loop",
    "body": [
      "{% for $1 in $2 %}",
      "$3",
      "{% else %}",
      "$4",
      "{% endfor %}"
    ]
  },
  "If condition": {
    "prefix": "if",
    "description": "IF condition",
    "body": [
      "{% if $1 %}",
      "$2",
      "{% else %}",
      "{% endif %}"
    ]
  },
  "Include": {
    "prefix": "include",
    "description": "Include other templates",
    "body": [
      "{% include \"$1\" %}"
    ]
  },
  "Lipsum": {
    "prefix": "lipsum",
    "description": "Generates some lorem ipsum for the template",
    "body": [
      "{{ lipsum(${1:how_many_paragraphs}) }}"
    ]
  },
  "Super": {
    "prefix": "super",
    "description": "Super block",
    "body": [
      "{{ super() }}"
    ]
  },
  "Template Block": {
    "prefix": "block",
    "description": "Creates a block",
    "body": [
      "{% block $1 %}",
      "$2",
      "{% endblock $1 %}"
    ]
  },
  "URL": {
    "prefix": "url",
    "description": "URL tag",
    "body": [
      "{{ url('${1:some-url-name}', ${2:arg}) }}"
    ]
  },
  "With": {
    "prefix": "with",
    "description": "With block",
    "body": [
      "{% with ${1:local_var}=${2:context_var} %}",
      "$3",
      "{% endwith %}"
    ]
  },
  "Static": {
    "prefix": "static",
    "description": "Static file",
    "body": [
      "{{ static('$1') }}"
    ]
  }
}
